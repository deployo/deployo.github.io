{
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "content/**",
            "layouts/**",
            "static/**",
            "logo_design.svg",
            "Makefile",
            "config.yml",
            "generate_gifs.sh"
        ]
    },
    "headers": [
        {
            "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        },
        {
            "source": "**/*.@(js|css)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "max-age=7200"
                }
            ]
        },
        {
            "source": "**/*.@(jpg|jpeg|gif|png|mp4)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "max-age=7200"
                }
            ]
        },
        {
            "source": "404.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "max-age=300"
                }
            ]
        }
    ]
}